                    <!--android:layout_width="270dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginTop="0dp"-->
                    <!--android:layout_marginBottom="30dp"-->
                    <!--android:textAllCaps="false"-->
                    <!--android:contentDescription="@string/facebook_acessibility"/>-->

            <!--<com.google.android.gms.common.SignInButton-->
                    <!--android:id="@+id/main_btn_google"-->
                    <!--android:layout_width="270dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_marginBottom="20dp"-->
                    <!--android:layout_marginTop="-20dp"-->
                    <!--style="@style/ButtonMain"-->
                    <!--android:background="@drawable/google_button_selector"-->
                    <!--android:contentDescription="@string/google_acessibility"-->
                    <!--android:visibility="gone"/>-->

            <Button
                    android:id="@+id/main_btn_nosignin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/main_txt_nosignin"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:layout_marginTop="-10dp"
                    android:textAllCaps="false"
                    android:contentDescription="@string/noLogin_acessibility"/>

        </LinearLayout>
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <include
            layout="@layout/linear_loading"
            android:layout_above="@+id/login_linear_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>


</FrameLayout>
