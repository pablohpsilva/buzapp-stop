<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_gravity="center|center_horizontal"
             android:id="@+id/fragment_config"
             android:background="@color/white"
             tools:context="aloeio.buzapp.app.Fragments.ConfigFragment"
             android:clickable="true">


    <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:layout_gravity="center|center_horizontal">
        <ImageButton
                android:id="@+id/config_btn_about"
                android:background="@drawable/config_circle_button_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:src="@mipmap/ic_action_about"
                app:layout_row="1"
                app:layout_column="1"/>
        <ImageButton
                android:id="@+id/config_btn_rate"
                android:background="@drawable/config_circle_button_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:src="@mipmap/ic_action_favorite"
                app:layout_row="1"
                app:layout_column="3"/>
        <ImageButton
                android:id="@+id/config_btn_share"
                android:background="@drawable/config_circle_button_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:src="@mipmap/ic_action_share"
                app:layout_row="1"
                app:layout_column="5"/>

        <TextView
                android:id="@+id/config_txt_about"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="20dp"
                android:text="Sobre"
                android:textAlignment="center"
                app:layout_row="2"
                app:layout_column="1"/>

        <TextView
                android:id="@+id/config_txt_rate"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:text="Qualificar"
                android:textAlignment="center"
                app:layout_row="2"
                app:layout_column="3"/>
        <TextView
                android:id="@+id/config_txt_share"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Gostou?"
                android:textAlignment="center"
                app:layout_row="2"
                app:layout_column="5"/>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center|center_horizontal">

        <ImageButton
                android:id="@+id/config_btn_report"
                android:layout_margin="10dp"
                android:background="@drawable/config_circle_button_selector"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:src="@mipmap/ic_action_forward"
                app:layout_row="5"
                app:layout_column="2"/>

        <ImageButton
                android:id="@+id/config_btn_logout"
                android:layout_margin="10dp"
                android:background="@drawable/config_circle_button_selector"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:src="@mipmap/ic_action_cancel_m"
                app:layout_row="5"
                app:layout_column="4"/>

        <TextView
                android:id="@+id/config_txt_report"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="Problema?"
                app:layout_row="6"
                app:layout_column="2"/>
        <TextView
                android:id="@+id/config_txt_finish_account"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:text="Logout"
                app:layout_row="6"
                app:layout_column="4"/>


    </android.support.v7.widget.GridLayout>
</FrameLayout>
